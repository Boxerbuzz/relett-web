
# ENVIRONMENT VARIABLE PREFIXING RULES:
# - VITE_ prefix: Variables accessible in frontend code (browser)
# - No prefix: Backend-only variables (edge functions, server-side)
# - NEVER put secret keys with VITE_ prefix (they become public!)

# Hedera Network Configuration
# Get these from https://portal.hedera.com/
VITE_HEDERA_NETWORK=testnet
VITE_HEDERA_ACCOUNT_ID=0.0.YOUR_ACCOUNT_ID
VITE_HEDERA_PRIVATE_KEY=YOUR_PRIVATE_KEY_HERE

# Hedera Testnet Configuration (for testing)
# You can create free testnet accounts at https://portal.hedera.com/
VITE_HEDERA_TESTNET_ACCOUNT_ID=0.0.YOUR_TESTNET_ACCOUNT_ID
VITE_HEDERA_TESTNET_PRIVATE_KEY=YOUR_TESTNET_PRIVATE_KEY_HERE

# Paystack Configuration (Frontend accessible - public key only!)
VITE_PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key_here

# Frontend API Keys (accessible in browser - use public keys only!)
VITE_GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_MAPS_API_KEY
VITE_IPFS_GATEWAY_URL=https://gateway.pinata.cloud/ipfs/

# Backend-only Variables (NO VITE_ prefix - not accessible in frontend)
# These are only available in backend/edge functions and stay secure
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Smart Contract Addresses (will be populated after deployment)
PROPERTY_TOKEN_CONTRACT_ADDRESS=
LAND_REGISTRY_CONTRACT_ADDRESS=

# External API Keys for Property Valuation (Backend only)
NIGERIAN_LAND_REGISTRY_API_KEY=YOUR_REGISTRY_API_KEY

# File Storage Configuration (Backend only - secret keys)
PINATA_API_KEY=YOUR_PINATA_API_KEY
PINATA_SECRET_API_KEY=YOUR_PINATA_SECRET_KEY

# Revenue Distribution Configuration (Backend only)
PAYMENT_PROCESSOR_API_KEY=YOUR_PAYMENT_API_KEY
BANK_API_KEY=YOUR_BANK_API_KEY

# Notification Services (Backend only)
TWILIO_ACCOUNT_SID=YOUR_TWILIO_SID
TWILIO_AUTH_TOKEN=YOUR_TWILIO_TOKEN
SENDGRID_API_KEY=YOUR_SENDGRID_KEY

# Security & Encryption (Backend only)
JWT_SECRET=your-super-secret-jwt-key-here
ENCRYPTION_KEY=your-32-character-encryption-key

# Development vs Production
NODE_ENV=development
